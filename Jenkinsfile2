pipeline {
  options {
    timestamps()
  }
  environment {
    DOCKERHUB_REPO = 'notregistered'
    DOCKERHUB_SERVER = 'https://index.docker.io/v1/'
    IMAGE = 'dropw'
    IMAGE_NAME = 'dropw-helmpipeline'
    IMAGE_TAG = 'latest'
    GIT_TAG_COMMIT = sh (script: 'git describe --tags --always', returnStdout: true).trim()
    CHART_DIR = 'dropw-app'
  }
  agent {
  kubernetes {
    label 'testhelm'
    yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: tiller
  containers:
    - name: helm
      image: dtzar/helm-kubectl
      command:
      - cat
      tty: true
"""
    }
  }
  stages {
    stage('Deploy release to k8s') {
      steps {
        container('helm') {
          sh """
            ls -la
            /usr/local/bin/helm init --client-only
            /usr/local/bin/helm list
            /usr/local/bin/helm lint ${CHART_DIR}
            /usr/local/bin/helm upgrade --install --set image.repository=${IMAGE_NAME} --set image.tag=${IMAGE_TAG} --debug ${IMAGE} ${CHART_DIR}
          """
        }
      }
    }

  }
}
